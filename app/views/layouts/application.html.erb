<!DOCTYPE html>
<html>
<head>
  <title>Lethe</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
    <div class="container">
      <header>
        <%= image_tag("logo.png", :alt => "Lethe Logo", :class => "round") %>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Help", '#' %></li>
            <li><%= link_to "Sign in", '#' %></li>
          </ul>
        </nav>
      </header>

      <section class="round">
        <% flash.each do |key, value| %>
            <div class="flash_<%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
    </div>
</body>
</html>
